
<%= content_for :title do %>
    FoodLog &ndash; <%= @day %>
<% end %>




<div class="columns is-centered mt-6">
    <% @day_entries.each do |entry| %>
    <div class='column is-one-quarter'>
        <div class='card'>
            <header class='card-header has-text-weight-bold'>
                <p class="card-header-title"> <%= entry.meal_type %> / <%= entry.category.title %></p>
            </header>
            <div class='card-content'>
                <div class='content'>
                    <p><span class='has-text-weight-bold'><%= entry.calories %></span> calorries</p>
                    <p><span class='has-text-weight-bold'><%= entry.fats %></span> fats</p>
                    <p><span class='has-text-weight-bold'><%= entry.carbohydrates %></span> carbo</p>
                    <p><span>Created <%= time_ago_in_words(entry.created_at) %> ago</span></p>
                </div>
            </div>
            <div class='card-footer'>
                <%= link_to 'Show', entry , class: 'card-footer-item'%>
                <%= link_to 'Edit', edit_entry_path(entry), class: 'card-footer-item' %>
                <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: 'card-footer-item' %>
            </div>
        </div>
    </div>
    <% end %>
</div>

<br>

<div class='columns is-centered'>
    <%= link_to "view all entries" , archives_index_path , class: 'button is-outlined is-link' %>
</div>


